{
  "name": "leechless-desktop",
  "version": "0.1.0",
  "private": true,
  "description": "Electron desktop app for Leechless",
  "type": "module",
  "main": "dist/main/main.js",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json --watch --preserveWatchOutput",
    "dev:electron": "wait-on tcp:5174 file:dist/main/main.js && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5174 electron .",
    "start": "electron ."
  },
  "dependencies": {
    "electron": "^31.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "wait-on": "^8.0.1"
  }
}
